{
  "name": "contrezz-backend",
  "version": "1.0.0",
  "description": "Contrezz SaaS Backend API",
  "main": "dist/index.js",
  "prisma": {
    "seed": "tsx prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "npx swc src -d dist --copy-files",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "build:check": "tsc",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push --accept-data-loss",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "deploy": "npm run build && npm run db:sync",
    "db:sync": "prisma generate && prisma db push --accept-data-loss",
    "db:migrate": "prisma migrate deploy"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.933.0",
    "@aws-sdk/lib-storage": "^3.931.0",
    "@aws-sdk/s3-request-presigner": "^3.933.0",
    "@prisma/client": "^5.22.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.7.42",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.3",
    "axios": "^1.13.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "docx": "^9.5.1",
    "dotenv": "^16.3.1",
    "express": "^4.21.2",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "html-to-text": "^9.0.5",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "node-cron": "^4.2.1",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2",
    "prisma": "^5.22.0",
    "redis": "^5.8.3",
    "socket.io": "^4.8.1",
    "tsx": "^4.7.0",
    "uuid": "^8.3.2",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/node-cron": "^3.0.11",
    "typescript": "^5.3.3"
  }
}
