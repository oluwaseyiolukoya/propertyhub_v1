# Database (PostgreSQL)
DATABASE_URL="postgresql://username:password@localhost:5432/propertyhub?schema=public"

# Server
PORT=5000
NODE_ENV=development

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-min-32-chars-change-in-production
JWT_EXPIRES_IN=7d

# CORS - Frontend URL
FRONTEND_URL=http://localhost:5173

# Payment Gateway - Platform Level (OPTIONAL)
# Only needed if you're charging property owners for subscription plans
# Individual property owners configure their own Paystack keys in the frontend
# Get your keys from: https://dashboard.paystack.com/#/settings/developers
PAYSTACK_SECRET_KEY=
PAYSTACK_PUBLIC_KEY=
PAYSTACK_TEST_SECRET_KEY=
PAYSTACK_TEST_PUBLIC_KEY=

# Redis (Optional - for Socket.io scaling across multiple servers)
# Leave empty for single-server deployment
REDIS_URL=

# File Upload
MAX_FILE_SIZE=5242880
UPLOAD_DIR=./uploads

# Email (Optional - for future use)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Deployment Notes:
# - For Render: Use Internal Database URL for DATABASE_URL
# - For production: Set NODE_ENV=production
# - Generate strong JWT_SECRET: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# - Set FRONTEND_URL to your production frontend URL

