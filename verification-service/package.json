{
  "name": "contrezz-verification-service",
  "version": "1.0.0",
  "description": "Identity Verification Microservice for Contrezz",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "prisma generate && npx swc src -d dist --copy-files",
    "start": "node dist/index.js",
    "postinstall": "prisma generate",
    "heroku-postbuild": "npm run build",
    "worker": "node dist/workers/verification.worker.js",
    "worker:dev": "tsx watch src/workers/verification.worker.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "tsx prisma/seed.ts",
    "test": "jest",
    "lint": "eslint src --ext .ts"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.933.0",
    "@aws-sdk/lib-storage": "^3.931.0",
    "@aws-sdk/s3-request-presigner": "^3.940.0",
    "@prisma/client": "^5.22.0",
    "@swc/cli": "^0.5.2",
    "@swc/core": "^1.7.42",
    "axios": "^1.7.7",
    "bullmq": "^5.15.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.0",
    "helmet": "^7.1.0",
    "ioredis": "^5.4.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "multer-s3": "^3.0.1",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.17.6",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
