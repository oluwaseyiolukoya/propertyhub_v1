# Service Configuration
PORT=5001
NODE_ENV=development

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/verification_db

# Redis (Job Queue)
REDIS_URL=redis://localhost:6379

# Dojah API (Nigerian Identity Verification)
# Get your keys from: https://dojah.io/
DOJAH_API_KEY=your_dojah_api_key_here
DOJAH_APP_ID=your_dojah_app_id_here
DOJAH_WEBHOOK_SECRET=your_webhook_secret_here
DOJAH_BASE_URL=https://api.dojah.io

# DigitalOcean Spaces (Document Storage)
# Create a Space at: https://cloud.digitalocean.com/spaces
# Generate API keys at: https://cloud.digitalocean.com/account/api/tokens
# Available regions: nyc3, sfo3, sgp1, fra1, ams3
SPACES_ACCESS_KEY_ID=your_spaces_access_key
SPACES_SECRET_ACCESS_KEY=your_spaces_secret_key
SPACES_REGION=nyc3
SPACES_BUCKET=contrezz-verification-docs
SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com

# API Security
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
API_KEY_MAIN_DASHBOARD=generate_secure_api_key_here
ENCRYPTION_KEY=generate_32_byte_hex_key_for_encryption

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:5173,http://localhost:5000

# Main Dashboard URL (for callbacks and notifications)
MAIN_DASHBOARD_URL=http://localhost:5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
