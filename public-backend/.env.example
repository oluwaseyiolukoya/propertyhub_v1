# Public Backend Environment Variables

# Server Configuration
PORT=5001
NODE_ENV=production

# Public Database
PUBLIC_DATABASE_URL=postgresql://user:password@host:5432/contrezz_public

# CORS Configuration
ALLOWED_ORIGINS=https://contrezz.com,https://www.contrezz.com

# App URLs (for redirects to signup)
APP_URL=https://app.contrezz.com
APP_SIGNUP_URL=https://app.contrezz.com/signup

# Optional: Analytics
GOOGLE_ANALYTICS_ID=
PLAUSIBLE_DOMAIN=

# Optional: Email notifications for contact forms
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
CONTACT_EMAIL=contact@contrezz.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
API_KEY_HEADER=X-API-Key
ADMIN_API_KEY=your-secure-admin-api-key-here
